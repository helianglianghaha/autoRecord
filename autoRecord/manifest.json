{
  "manifest_version": 3,
  "name": "Flow Recorder",
  "version": "1.0",
  "description": "流量录制",
  "host_permissions": [
    "*://*/*"
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon/ylyx.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "offline_enabled": true,
  "icons": {
    "16": "icon/ylyx.png"
  }
}

